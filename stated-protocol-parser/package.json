{
  "name": "stated-protocol-parser",
  "version": "1.0.7",
  "description": "Parser and formatter for the Stated protocol - a decentralized statement verification system",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "tsx --test 'src/**/*.test.ts'",
    "prepublishOnly": "npm run build",
    "update-fixtures": "tsx scripts/updateFixtures.ts"
  },
  "keywords": [
    "stated",
    "protocol",
    "parser",
    "formatter",
    "verification",
    "decentralized",
    "statements"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/c-riq/stated"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1"
  }
}
