{
  "name": "stated-protocol",
  "version": "5.1.0",
  "description": "Protocol for Decentralised Interorganisational Coordination",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "test": "tsx --test 'src/**/*.test.ts'",
    "lint": "eslint 'src/**/*.ts' 'scripts/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'scripts/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'scripts/**/*.ts'",
    "fix": "npm run format && npm run lint:fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "update-fixtures": "tsx scripts/updateFixtures.ts"
  },
  "keywords": [
    "stated",
    "protocol",
    "parser",
    "formatter",
    "verification",
    "decentralized",
    "statements"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/c-riq/stated"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1"
  }
}
